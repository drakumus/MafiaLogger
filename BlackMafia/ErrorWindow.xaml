<Window x:Class="BlackMafia.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackMafia"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="100" Width="150">
    <Grid>
        <TextBlock Height="23" Width="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Error</TextBlock>
        <Button Height="23" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="Button_Click">OK</Button>
    </Grid>
</Window>
